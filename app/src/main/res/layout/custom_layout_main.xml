<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:textSize="23sp"
        android:layout_width="290dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView_bookm" />

    <TextView
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_bookm"
        android:layout_alignStart="@+id/textView_bookm"
        android:id="@+id/textView_authorm"
        android:layout_alignBottom="@+id/imageView_m2" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="3dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:layout_alignBottom="@+id/textView_rate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:id="@+id/imageview_rem" />

    <ImageView
        android:layout_width="29dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/star1"
        android:paddingTop="1.5dp"
        android:background="#cde"
        android:paddingBottom="4dp"
        android:id="@+id/imageView_m2"
        android:layout_below="@+id/textView_bookm"
        android:layout_toEndOf="@+id/textView_authorm"
        android:layout_marginStart="5dp" />

    <TextView
        android:text="TextView"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView_m2"
        android:layout_marginStart="1dp"
        android:id="@+id/textView_rate"
        android:layout_below="@+id/textView_bookm"
        android:layout_alignBottom="@+id/imageView_m2" />

</RelativeLayout>
